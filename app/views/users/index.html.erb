<ul class="index-users-ul">
  <% @users.each_with_index do |user, index| %>
    <%= link_to user_path(user) do %>
      <li class="users-card-item">
        <div class="inner-border <%= index.even? ? 'even' : '' %>">
          <div class="profile-img <%= index.even? ? 'even' : '' %>">
            <%= image_tag(user.photo, alt: "User profile photo.", class: "display-photo") %>
          </div>
        </div>
        <div class="user-name <%= index.even? ? 'even' : '' %>">
        <h2><%=user.name%></h2>
        </div>
        <div class="post-num">
        <p class="para <%= index.even? ? 'even' : '' %>"><span>Number of posts: </span>43648 </p>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
